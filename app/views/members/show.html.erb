<p id="notice"><%= notice %></p>

<h5 class = "collection-item">
  <%= @member.firstName %> <%= @member.lastName %>
</h5>

<p>
  <strong>Correo:</strong>
  <%= @member.email %>
</p>

<p>
  <strong>Teléfono:</strong>
  <%= @member.phoneNumber %>
</p>

<p>
  <strong>Día de pago:</strong>
  <%= @member.paymentDay %>
</p>

<p>
  <%= 'Activo' if @member.active %>
  <%= 'Inactivo' if !@member.active %>
</p>

<p>
  <strong>Día siguiente de pago:</strong>
  <%= @member.nextPaymentDate %>
</p>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.date %></td>
        <td><%= link_to 'Editar', edit_payment_path(payment) %></td>
        <td><%= link_to 'Eliminar', payment, method: :delete, data: { confirm: '¿Desea continuar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>