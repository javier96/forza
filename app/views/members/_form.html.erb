<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :firstName, 'Nombre' %>
    <%= form.text_field :firstName %>
   </div>

  <div class="field">
    <%= form.label :lastName, 'Apellido' %>
    <%= form.text_field :lastName %>
  </div>

  <div class="field">
    <%= form.label :email, 'Correo' %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :phoneNumber, 'Teléfono' %>
    <%= form.text_field :phoneNumber %>
  </div>

  <div class="field">
    <%= form.label :paymentDay, 'Fecha de corte' %>
    <%= form.number_field :paymentDay, value: Date.today.day %>
  </div>

  <div class="switch">
    <label>
      Activo
      <%= form.check_box :active, checked: "checked" %>
      <span class="lever"></span>
    </label>
  </div>
  <br>
  <div class="field">
    <%= form.label :nextPaymentDate, 'Día siguiente de pago' %>
    <%= form.text_field :nextPaymentDate, class: "datepicker", value: Date.today.next_month%>
  </div>

  <div class="actions waves-effect waves-light btn">
    <%= form.submit 'Guardar' %>
  </div>
<% end %>
