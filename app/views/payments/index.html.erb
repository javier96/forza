<p id="notice"><%= notice %></p>

<h1>Pagos</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Fecha</th>
      <th>Miembro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.amount %></td>
        <td><%= payment.date %></td>
        <td><%= "#{Member.find(payment.member_id).firstName} #{Member.find(payment.member_id).lastName }" %></td>
        <td><%= link_to 'Editar', "members/#{payment.member_id}/payments/#{payment.id}/edit" %></td>
        <td><%= link_to 'Eliminar', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
